@using guneshukuk.WebUIv2.Models.ViewModels
@model ArticleListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div style="justify-content:center;">
    <div class="article-list" >
        @if (Model!=null)
        {
            @foreach (var article in Model.Articles)
            {
                <div class="article-item">
                    <div class="article-image" style="background-image: url('@article.ArticleImageUrl');">
                        <a href="@Url.Action("ArticleDetail","Article",new {articleId=article.ArticleId})">

                        </a>
                    </div>
                    <div class="article-title">
                        <a href="@Url.Action("ArticleDetail","Article",new {articleId=article.ArticleId})">@article.ArticleTitle</a>
                    </div>
                </div>
            }
        }
       
    </div>
    @if (Model != null)
    {
        <div class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <a href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })">Previous</a>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <a href="@Url.Action("Index", new { page = i })" class="@(i == Model.CurrentPage ? "active" : "")">@i</a>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">Next</a>
            }
        </div>
    }
    
</div>


<style>
    .article-list-section {
        margin-top: 20px;
    }

    .article-list-container {
        display: flex;
        justify-content: center;
    }

    .article-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        max-width: 100%; /* İstediğiniz genişliği burada ayarlayabilirsiniz */
        padding-top:80px;
        padding-left:100px;
        padding-right:100px;
        
       
    }

    .article-item {
        width: 30%;
        margin: 1%;
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
       
    }

    .article-image {
        width: 100%;
        height: 200px;
        background-size: cover;
        background-position: center;
        margin-bottom: 10px;
    }

    .article-title {
        font-size: 18px;
        font-weight: bold;
    }

    .pagination {
        text-align: center;
        margin-top: 20px;
        padding-left:600px;
        padding-right:600px;
        
        
    }

        .pagination a {
            margin: 0 5px;
            text-decoration: none;
            color: white;
        }

        .pagination .active {
            font-weight: bold;
            text-decoration: underline;
            color:white;
            font-size:20px;
            
        }
</style>