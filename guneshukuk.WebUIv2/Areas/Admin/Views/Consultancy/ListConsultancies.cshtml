@using guneshukuk.WebUIv2.Areas.Admin.Models.Dtos.ConsultancyDtos
@model List<ResultConsultancyDto>
@{
    ViewData["Title"] = "ListConsultancies";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}



<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Makale İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hizmetlerimiz Bilgileri</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hizmetler ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>								
									<th scope="col">Hizmet Açıklaması</th>
									<th scope="col">Resim Kısayolu</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ConsultancyId</td>										
										<td>@item.ConsultancyTitle</td>
										<td>@item.ConsultancyContent</td>
										<td>@item.ImageUrl</td>
										<td><a href="/Admin/Consultancy/DeleteConsultancy/@item.ConsultancyId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Admin/Consultancy/UpdateConsultancy/@item.ConsultancyId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>

								}


							</tbody>
						</table>
						<a href="/Admin/Consultancy/CreateConsultancy/" class="btn btn-outline-primary"> Yeni Hizmet  Girişi</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>



