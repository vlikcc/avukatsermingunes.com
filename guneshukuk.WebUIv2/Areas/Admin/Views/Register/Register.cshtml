@using guneshukuk.WebUIv2.Areas.Admin.Models.Dtos.Identity
@model RegisterDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="row">
      
        <div class="col-sm-6">
            <h4 class="font-alt">KAYIT OL</h4>
            <hr class="divider-w mb-10">
            <form class="form" method="post">
                <div class="form-group">
                    <input class="form-control" id="Name"  name="Name" type="text" placeholder="Adınız" asp-for="Name" />
                </div>
                <div class="form-group">
                    <input class="form-control" id="Surname" name="Surname" type="text" placeholder="Soyadınız" asp-for="Surname" />
                </div>
                <div class="form-group">
                    <input class="form-control" id="Email"  name ="Email"type="text" placeholder="E-Posta Adresiniz" asp-for="Email" />
                </div>
                <div class="form-group">
                    <input class="form-control" id="Username"  name ="UserName"type="text" placeholder="Kullanıcı Adı" asp-for="UserName" />
                </div>
                <div class="form-group">
                    <input class="form-control" id="Password" name="Password" type="password" placeholder="Şifre" asp-for="Password" />
                </div>

                <div class="form-group">
                    <button class="btn btn-block btn-round btn-b">Kayıt Ol</button>
                </div>
            </form>
        </div>
    </div>
</div>

