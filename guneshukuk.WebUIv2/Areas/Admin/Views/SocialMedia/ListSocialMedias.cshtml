@using guneshukuk.WebUIv2.Areas.Admin.Models.Dtos.SocialMediaDtos
@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "ListSocialMedias";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Bilgileri</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Sosyal Medya ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Sosyal Medya Adı</th>
									<th scope="col">Sosyal Medya Linki</th>
									<th scope="col">Sosyal Medya İkonu</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.SocialMediaId</td>
										<td>@item.SocialMediaName</td>
										<td>@item.SocialMediaUrl</td>
										<td>@item.SocialMediaIcon</td>
										<td><a href="/Admin/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Admin/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>

								}


							</tbody>
						</table>
						<a href="/Admin/SocialMedia/CreateSocialMedia/" class="btn btn-outline-primary"> Yeni Sosyal Medya Bilgisi Girişi</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>




