@using guneshukuk.WebUIv2.Areas.Admin.Models.Dtos.AboutDtos
@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">HAKKIMDA BİLGİ GİRİŞİ</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">

						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl">Resim Linki Giriniz</label>
								<input type="text" class="form-control" id="imageUrl" name="ImageUrl" asp-for="ImageUrl">
							</div>
							<div class="form-group">
								<label for="Title">Başlık  Giriniz</label>
								<input type="text" class="form-control" id="title" name="Title" asp-for="Title">
							</div>
							<div class="form-group">
								<label for="Description">Açıklama Giriniz</label>
								<textarea rows="5" class="form-control" id="Description" name="Description" asp-for="Description"></textarea>
							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">Hakkımızda Bilgisi Ekle</button>

						</div>
					</div>
				</form>
			</div>


		</div>
	</div>
</div>


