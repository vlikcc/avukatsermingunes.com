@using guneshukuk.WebUIv2.Areas.Admin.Models.Dtos.AboutDtos
@model List<ResultAboutDto>
@{
    ViewData["Title"] = "ListAbouts";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımızda Bilgileri</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımızda ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Resim Kısayolu</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.AboutId</td>
										<td>@item.ImageUrl</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a href="/Admin/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Admin/About/UpdateAbout/@item.AboutId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>

								}


							</tbody>
						</table>
						<a href="/Admin/About/CreateAbout/" class="btn btn-outline-primary"> Yeni Hakkımızda Bilgisi Girişi</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>



