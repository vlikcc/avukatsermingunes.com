@using guneshukuk.WebUIv2.Areas.Admin.Models.Dtos.AboutDtos
@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">HAKKIMDA BİLGİ GÜNCELLEME</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">

						<div class="card-body">
							@Html.TextBoxFor(x=>x.AboutId,new { @hidden="true",@readonly="readonly"} )
							<div class="form-group">
								<label for="ImageUrl">Resim Linki Giriniz</label>
								@Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
								
							</div>
							<div class="form-group">
								<label for="Title">Başlık  Giriniz</label>
								@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
							</div>
							<div class="form-group">
								<label for="Description">Açıklama Giriniz</label>
								@Html.TextAreaFor(x=>x.Description, new {@class="form-control"})
							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">Hakkımızda Bilgisi Güncelle</button>

						</div>
					</div>
				</form>
			</div>


		</div>
	</div>
</div>


