@using guneshukuk.WebUIv2.Areas.Admin.Models.Dtos.ContactDtos
@model List<ResultContactDto>
@{
    ViewData["Title"] = "ListContacts";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim Bilgileri İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Bilgileri</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim Bilgileri ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">İletişim Adresi</th>
									<th scope="col">Telefon Numarası</th>
									<th scope="col">E-Posta Adresi</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactId</td>
										<td>@item.Location</td>
										<td>@item.Phone</td>
										<td>@item.Email</td>
										<td><a href="/Admin/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Admin/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>

								}


							</tbody>
						</table>
						<a href="/Admin/Contact/CreateContact/" class="btn btn-outline-primary"> Yeni İletişim Bilgisi Girişi</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>

