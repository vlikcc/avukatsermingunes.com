@using guneshukuk.WebUIv2.Areas.Admin.Models.Dtos.ContactDtos
@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İLETİŞİM BİLGİLERİ GÜNCELLEME</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">

						<div class="card-body">
							@Html.TextBoxFor(x => x.ContactId, new { @hidden = "true", @readonly = "readonly" })
							<div class="form-group">
								<label for="Location">İletişim Adresi Giriniz</label>
								@Html.TextBoxFor(x => x.Location, new { @class = "form-control" })

							</div>
							<div class="form-group">
								<label for="Phone">İletişim Telefonu Giriniz</label>
								@Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
							</div>
							<div class="form-group">
								<label for="Email">E-Posta Adresi Giriniz</label>
								@Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim Bilgisi Güncelle</button>

						</div>
					</div>
				</form>
			</div>


		</div>
	</div>
</div>


