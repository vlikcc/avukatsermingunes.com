@using guneshukuk.WebUIv2.Areas.Admin.Models.Dtos.BookingDtos
@model UpdateBookingDto
@{
	ViewData["Title"] = "UpdateBooking";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">RANDEVU  GÜNCELLEME</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">

						<div class="card-body">
							@Html.TextBoxFor(x => x.BookingId, new { @hidden = "true", @readonly = "readonly" })
							@Html.TextBoxFor(x => x.BookingDate.BookingDateId, new { @hidden = "true", @readonly = "readonly" })
							<div class="form-group">
								<label for="ArticleTitle">Adı Soyadı</label>
								@Html.TextBoxFor(x => x.BookingName, new { @class = "form-control" })
							</div>
							<div class="form-group">
								<label for="ArticleImageUrl">E-Posta Adresi  Giriniz</label>
								@Html.TextBoxFor(x => x.BookingEmail, new { @class = "form-control" })

							</div>
							<div class="form-group">
								<label for="ArticleContent">Telefon No</label>
								@Html.TextAreaFor(x => x.BookingPhone, new { @class = "form-control" })
							</div>
							<div class="form-group">
								<label for="ArticleContent">Mesaj</label>
								@Html.TextAreaFor(x => x.BookingMessage, new { @class = "form-control" })
							</div>
							<div class="form-group">
								<label for="ArticleContent">Randevu Tarihi</label>
								@Html.TextAreaFor(x => x.BookingDate.Date, new { @class = "form-control" })
							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">Randevu  Güncelle</button>

						</div>
					</div>
				</form>
			</div>


		</div>
	</div>
</div>



