@using guneshukuk.WebUIv2.Areas.Admin.Models.Dtos.ArticleDtos
@model List<ResultArticleDto>
@{
    ViewData["Title"] = "ListArticles";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}



<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Makale İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Makale Bilgileri</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Makaleler ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>									
									<th scope="col">Başlık</th>
									<th scope="col">Resim Kısayolu</th>
									<th scope="col">Makale İçeriği</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ArticleId</td>
										<td>@item.ArticleImageUrl</td>
										<td>@item.ArticleTitle</td>
										<td>@item.ArticleContent</td>
										<td><a href="/Admin/Article/DeleteArticle/@item.ArticleId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Admin/Article/UpdateArticle/@item.ArticleId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>

								}


							</tbody>
						</table>
						<a href="/Admin/Article/CreateArticle/" class="btn btn-outline-primary"> Yeni Makale  Girişi</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>

